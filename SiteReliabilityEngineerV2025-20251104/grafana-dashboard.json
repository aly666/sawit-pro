{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(255, 255, 255, 0.7)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 1,
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["sre", "logs", "loki"],
  "templating": { "list": [] },

  "time": { "from": "now-15m", "to": "now" },
  "timepicker": { "refresh_intervals": [] },
  "timezone": "",
  "title": "SRE Full Log Monitoring Dashboard (NO AUTO REFRESH)",
  "version": 3,

  "panels": [

    {
      "type": "stat",
      "title": "Success Rate (%)",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate({job=\"parsed-json\"} | json | status_code=200 [5m])) / sum(rate({job=\"parsed-json\"} | json [5m])) * 100",
          "refId": "A"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Error Rate (%)",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate({job=\"parsed-json\"} | json | status_code=~\"404|500\" [5m])) / sum(rate({job=\"parsed-json\"} | json [5m])) * 100",
          "refId": "A"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Total RPS",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "targets": [
        { "expr": "sum(rate({job=\"parsed-json\"} | json [1m]))", "refId": "A" }
      ]
    },

    {
      "type": "stat",
      "title": "Errors per second",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "targets": [
        { "expr": "sum(rate({job=\"parsed-json\"} | json | status_code=~\"404|500\" [1m]))", "refId": "A" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Latency p50 / p90 / p99",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "quantile_over_time(0.50, {job=\"parsed-json\"} | json | unwrap response_time_ms [5m])",
          "legendFormat": "p50", "refId": "A"
        },
        {
          "expr": "quantile_over_time(0.90, {job=\"parsed-json\"} | json | unwrap response_time_ms [5m])",
          "legendFormat": "p90", "refId": "B"
        },
        {
          "expr": "quantile_over_time(0.99, {job=\"parsed-json\"} | json | unwrap response_time_ms [5m])",
          "legendFormat": "p99", "refId": "C"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Traffic per Service (RPS)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "sum by (service) (rate({job=\"parsed-json\"} | json [1m]))",
          "legendFormat": "{{service}}", "refId": "A"
        }
      ]
    },

    {
      "type": "bargauge",
      "title": "Error Breakdown (404 vs 500)",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum(rate({job=\"parsed-json\"} | json | status_code=404 [5m]))",
          "legendFormat": "404", "refId": "A"
        },
        {
          "expr": "sum(rate({job=\"parsed-json\"} | json | status_code=500 [5m]))",
          "legendFormat": "500", "refId": "B"
        }
      ]
    },

    {
      "type": "piechart",
      "title": "Version Distribution",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 12 },
      "targets": [
        {
          "expr": "sum by (app_version) (rate({job=\"parsed-json\"} | json [5m]))",
          "legendFormat": "{{app_version}}", "refId": "A"
        }
      ]
    },

    {
      "type": "bargauge",
      "title": "Errors per Service",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "sum by (service) (rate({job=\"parsed-json\"} | json | status_code=~\"404|500\" [5m]))",
          "legendFormat": "{{service}}", "refId": "A"
        }
      ]
    },

    {
      "type": "bargauge",
      "title": "Top Users With Errors",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 12 },
      "targets": [
        {
          "expr": "topk(10, sum by (user_id) ({job=\"parsed-json\"} | json | status_code=~\"404|500\"))",
          "legendFormat": "{{user_id}}", "refId": "A"
        }
      ]
    },

    {
      "type": "logs",
      "title": "Raw Logs (Parsed JSON)",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 18 },
      "targets": [
        { "expr": "{job=\"parsed-json\"} | json", "refId": "A" }
      ]
    },

    {
      "type": "stat",
      "title": "Total 200 (OK)",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"parsed-json\"} | json | status_code=200 [24h]))",
          "refId": "A"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Total 404 (Not Found)",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 28 },
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"parsed-json\"} | json | status_code=404 [24h]))",
          "refId": "A"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Total 500 (Server Error)",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 28 },
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"parsed-json\"} | json | status_code=500 [24h]))",
          "refId": "A"
        }
      ]
    }

  ]
}

